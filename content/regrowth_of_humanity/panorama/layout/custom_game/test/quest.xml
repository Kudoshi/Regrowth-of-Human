<root>
    <styles>
     <include src="file://{resources}/styles/custom_game/test/quest.css" />
    </styles>
     
    <scripts>
      <include src="file://{resources}/scripts/custom_game/test/quest.js" />
    </scripts>

    <snippets>
        <snippet name="Quest">
            <Panel class="Quest">
                <Panel id="LeftSide">
                    <Panel id="QuestImage">
                        <Image src="file://{resources}/images/custom_game/quest/quest.png"/>
                    </Panel>
                </Panel>
                <Panel id="RightSide">
                    <Panel id="TopSide">
                        <Label id="QuestTitle" text="Sample Quest Title" />
                    </Panel>
                    <Panel id="BottomSide">
                        <Panel id="Background"/>
                        <Label id="QuestDescription" text="Sample Quest desc"/>
                        <Label id="QuestProgress" text="0/1" />
                    </Panel>
                </Panel>
            </Panel>
        </snippet>
    </snippets>

    <Panel class="QuestRoot">
        <Label id="QuestName" text="Quests" />
        <Panel id="Quests"> <!--Stuff inside it is refered by quest.js-->
        </Panel>
    </Panel>
</root>